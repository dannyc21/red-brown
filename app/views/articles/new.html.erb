<h1>Create an article</h1>

<%= link_to 'Home', root_path %> <%= link_to 'About Us', pages_about_path %>

<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<%= f.submit %>

<% end %>